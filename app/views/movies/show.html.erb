<div class="main movie-show">
  <div class="container">
    <div class="movie">
      <div class="info">
        <img src="<%= @movie.image %>">
        <h3 class="movie-title">  <%= @movie.title %> </h3>
        <p class="movie-release-year"> <%= @movie.release_year %> </p>
        <% link_to "Back", root_path %>
        <p class="movie-plot">  <%= @movie.plot %> </p>
<br><%= link_to "Back", root_path %>
      </div>

    </div>

    <h2>Cast</h2>
<% @actors.each do |a| %>
    <div class="actor">
     <img src="<%= a.image %>">
      <h3 class="actor-name"> <%= a.first_name %> <%= a.last_name %> </h3>
      <p class="actor-bio"> <%= a.bio %> </p>
      <%= link_to "Learn more", actor_path(a) %>
    </div>
<% end %>
  </div>
</div>
